<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Hotel</p>
            <div class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </div>
            <!-- TODO: add map here -->
        </div>
        <div class="col-md-9">
            <div class="card" id = "caption">
                <img class="image-responsive" src="<%=hotel.image%>" alt="">
                <div class="caption">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="/"><h5 class="float-left"><%=hotel.name  %></h5></a>
                            <span class="float-right"> @ $99.9/day</span>
                        </div>
                    </div>
                    <p><%=hotel.description  %></p>
                </div>
            </div>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <a class = "btn btn-success" href="/hotels/<%= hotel._id %>/comments/new">Add a comment</a>
                </div>
                <hr>
                <% hotel.comments.forEach((comment)=>{ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %> </strong>
                            <span class="float-right"> 10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>





<% include ../partials/footer %>