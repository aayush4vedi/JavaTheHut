<%- include ('../partials/header') %>
<h1><%= title %></h1>

<form action="<%= booking._id %>?_method=PUT" method="POST">
    <input name="table" value = "<%= booking.table %>">
    <input name="checkInTime" value = "<%= booking.checkInTime %>">
    <input name="stayingMinutes" value = "<%= booking.stayingMinutes %>">

    <button type="submit">Submit</button>


    <label for="Customer">
        <select id="customer" type="select" value = "<%= booking.customer.name %>"" name="customer" required="true">
            <% customers.forEach((customer)=>{ %>
                <option value= <%=customer._id%> selected="selected"><%=customer.name%></option>
            <% }) %>
        </select>
    </label>
    <input name="size" value = "<%= booking.size %>">
    <label for="Tables">
        <select id="table" type="select" value = "<%= booking.table.name %>"required="true">
            <% tables.forEach((table)=>{ %>
                <h3><%= table.name %></h3> <h4> - <%= table.capaity %> - </h4>
                <input class="checkbox-input" type="checkbox" name="table" id= "<%= table._id%>" value= <%= table.name%>/>
            <% }) %>
        </select>
    </label><br>

    <select name="checkInTime" value = "<%= booking.checkInTime %>">
        <option value="1800">1800</option>
        <option value="1830">1830</option>
        <option value="1900">1900</option>
        <option value="1930">1930</option>
        <option value="2000">2000</option>
        <option value="2030">2030</option>
        <option value="2100">2100</option>
        <option value="2130">2130</option>
        <option value="2200">2200</option>
        <option value="2230">2230</option>
        <option value="2300">2300</option>
        <option value="2330">2330</option>
    </select>

    <select name="stayingMinutes" value = "<%= booking.stayingMinutes %>">
        <option value="30">30</option>
        <option value="60">60</option>
        <option value="90">90</option>
        <option value="120">120</option>
        <option value="150">150</option>
        <option value="180">180</option>
    </select>

    <button type="submit">Submit</button>
</form>

<%- include ('../partials/footer') %>
