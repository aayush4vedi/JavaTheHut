<%- include ('../partials/header') %>
<h1><%= title %></h1>

<form action="/fooder/v1/bill/<%= bill._id %>?_method=PUT" method="POST">
    <select name="isPaid" value="<%= bill.isPaid %>">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <input name="dineAmount" value="<%= bill.dineAmount %>">
    <input name="taxAmount" value="<%= bill.taxAmount %>">
    <input name="serviceCharge" value="<%= bill.serviceCharge %>">

    <button type="submit">Submit</button>
</form>

