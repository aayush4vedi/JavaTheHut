<h1><%= title %></h1>

<h2><%= hall.name %></h2>
<h2><%= hall.restaurant %></h2>
<% hall.tables.forEach((table)=>{ %>
    <h2><%= table.name %></h2>
    <h2><%= table.capacity %></h2>
<% }) %>

<button href="/hall/<%= hall._id%>/edit">Edit</button>
<form action="/hall/<%= hall._id %>?_method=DELETE" method="POST" id="delete">
    <button type="submit">Delete</button>
</form>