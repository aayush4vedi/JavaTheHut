<%- include ('../partials/header') %>
<h1><%= title %></h1>

<form action="/fooder/v1/cook/<%= cook._id %>?_method=PUT" method="POST">
    <input name="cookID" value = "<%=cook.cookID %>">
    <select id="employee" type="select" value= <%=cook.employee._id%> name="employee" required="true">
        <% employees.forEach((employee)=>{ %>
            <option value= <%=employee._id%> selected="selected"><%=employee.name%></option>
        <% }) %>
    </select>

    <button type="submit">Submit</button>
</form>

