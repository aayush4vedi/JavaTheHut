<% include partials/header %>

<div class="container main">
    <h1>Blog Details</h1>
    <div class="ui container main segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%=blog.image %>" >
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%= blog.body %> </p>
                </div>
            </div>
        </div>
        <div class="row">
            <button href="/blogs/<%= blog._id%>/edit" class="ui yellow button">Edit</button>
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
                <button class="ui button red" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>
    
<% include partials/footer %>

